@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>

<table class="table table-striped table-hover">

    <thead>
        <tr>
            <th colspan="4" class="text-center bg-dark text-light">All Users</th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">EDIT</a>
                    <a class="btn btn-danger" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id">DELETE</a>
                </td>
            </tr>
        }
    </tbody>
</table>