@using WebNetSample.Entity.Concrete;
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Detailed Category Page";
}

<p>
    <a class="btn btn-success" asp-controller="Categories" asp-action="Add">NEW CATEGORY</a>
</p>

<table class="table table-striped table-hover">

    <thead>
        <tr>
            <th colspan="7" class="text-center bg-dark text-light">CATEGORIES WITH DETAILS</th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageFile)
            </th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    <img src="@item.ImagePath" alt="@item.Name" style="height:500px;width:700px;">
                </td>
                <td>
                    <a class="btn btn-warning" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id">EDIT</a>
                    <a class="btn btn-danger" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id">DELETE</a>
                </td>
            </tr>
        }
    </tbody>
</table>