@using WebNetSample.Entity.Concrete;
@model Product

@using (Html.BeginForm("Add", "Products", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Product Details</th>
        </tr>
        <tr>
            <td>Id: </td>
            <td>
                <input type="text" id="Id" name="Id" value="@ViewBag.Id" disabled>
            </td>
        </tr>
        <tr>
            <td>Name: </td>
            <td>
                @Html.TextBoxFor(m => m.Name)
            </td>
        </tr>
        <tr>
            <td>Category: </td>
            <td>
                @Html.DropDownListFor(m => m.CategoryId, new List<SelectListItem>
            { new SelectListItem{Text="Toys", Value="cc1fd238-f590-483e-ab5c-15006f73eb92"}}, "Please select a category")
            </td>
        </tr>
        <tr>
            <td>Supplier: </td>
            <td>
                @Html.DropDownListFor(m => m.SupplierId, new List<SelectListItem>
            { new SelectListItem{Text="Xyz", Value="aa1e7065-a0cf-467f-942c-cba70a5f7b61"}}, "Please select a supplier")
            </td>
        </tr>
        <tr>
            <td>Price: </td>
            <td>
                @Html.TextBoxFor(m => m.Price)
            </td>
        </tr>
        <tr>
            <td>Image URL: </td>
            <td>
                @Html.TextBoxFor(m => m.ImageUrl)
            </td>
        </tr>
        <tr>
            <td>Creation Date: </td>
            <td>
                <input type="text" id="CreationDate" name="CreationDate" value="@ViewBag.CreationDate" disabled>
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
}