@using WebNetSample.Entity.Dtos;
@using WebNetSample.WebNetMVC.Components
@model IEnumerable<ProductDetailDto>

@{
    ViewData["Title"] = "Detailed Products Page";
}

<p>
    <a class="btn btn-success" asp-controller="Products" asp-action="Add">NEW PRODUCT</a>
</p>

<table class="table table-striped table-hover">

    <thead>
        <tr>
            <th colspan="7" class="text-center bg-dark text-light">PRODUCTS WITH DETAILS</th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>Operations</th>
        </tr>
    </thead>
    @await Component.InvokeAsync(nameof(ProductsWidget));
</table>