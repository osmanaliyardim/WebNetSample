@using WebNetSample.Entity.Dtos;
@model IEnumerable<ProductDetailDto>

@{
    ViewData["Title"] = "Products Page";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
            <th>Category</th>
            <th>Supplier</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
         {
              <tr>
                  <td>@item.Id</td>
                  <td>@item.Name</td>
                  <td>@item.Price</td>
                  <td>@item.ImageUrl</td>
                  <td>@item.CategoryName</td>
                  <td>@item.SupplierName</td>
              </tr>
         }
    </tbody>
</table>